<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollageSelector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#2a2e2d"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/kolaz1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/toLettersActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz"
                    android:padding="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:id="@+id/kolaz2">

                <ImageView
                    android:id="@+id/colorPicker1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz2"
                    android:padding="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:id="@+id/kolaz3">

                <ImageView
                    android:id="@+id/cropImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz3"
                    android:padding="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/kolaz4">

                <ImageView
                    android:id="@+id/wand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz4"
                    android:padding="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:id="@+id/kolaz5">

                <ImageView
                    android:id="@+id/flipHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz5"
                    android:padding="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:id="@+id/kolaz6">

                <ImageView
                    android:id="@+id/flip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kolaz6"
                    android:padding="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
